@model MedService.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXhW0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body {
            background: url('../../MedService (1).jpg') no-repeat center center;
            margin-bottom: 60px;
            background-size: cover;
            min-height: 100vh;
            color: black;
        }
    </style>
</head>

<div class="container mt-4">
    <header class="text-center mb-4">
        <h1 class="display-4">@Html.DisplayFor(model => model.DoctorName)</h1>
        <p class="lead text-muted">@Html.DisplayFor(model => model.Specialization.SpecializationName)</p>
    </header>

    <h3>Are you sure you want to delete this doctor?</h3>
    <div>
        <hr />
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.DoctorPhoto" alt="Doctor Photo" class="img-fluid rounded-circle doctor-photo" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoctorName)</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoctorEmail)</dd>
                    <dt class="col-sm-4">Specialization</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Specialization.SpecializationName)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="DoctorId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
