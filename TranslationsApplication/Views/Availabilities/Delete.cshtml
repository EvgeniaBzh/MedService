@model MedService.Models.Availability

@{
    ViewData["Title"] = "Delete";
}

<style>
</style>

<h3>Are you sure you want to delete this availability?</h3>
<div class="form-group">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>

        <dt class="col-sm-2">
            Date
        </dt>

        <dd class="col-sm-10">
            @Model.Date.ToString("dd/MM/yyyy") 
        </dd>

        <dt class="col-sm-2">
            Time
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("HH:mm") 
        </dd>

    </dl>

    <form asp-action="Delete" class="form-group">
        <input type="hidden" asp-for="AvailabilityId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
