@model IEnumerable<MedService.Models.Availability>

@{
    ViewData["Title"] = "Availability Index";
}

<style>
    html {
        position: relative;
        min-height: 100%;
        font-size: 16px;
    }

    body {
        background: url('../MedService (1).jpg') no-repeat center center;
        margin-bottom: 60px;
        background-size: cover;
        min-height: 100vh;
    }

    .btn:focus, .btn:active:focus {
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
    }

    .btn-primary, .btn-secondary {
        background-color: #548D9B;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover, .btn-secondary:hover {
        background-color: #CEDFCC;
        color: #548D9B;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    table {
        background-color: rgba(255, 255, 255, 0.8); 
        border-radius: 8px; 
        margin-bottom: 20px; 
    }

    th {
        background-color: #548D9B; 
        color: white; 
    }

    th, td {
        padding: 10px; 
        text-align: left; 
    }
</style>

<h1>Availability List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Day</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.AvailabilityId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
