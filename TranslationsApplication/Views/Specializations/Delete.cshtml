@model MedService.Models.Specialization

@{
    ViewData["Title"] = "Delete";
}

<style>
    html {
        position: relative;
        min-height: 100%;
        font-size: 16px;
    }

    body {
        background: url('../../MedService (1).jpg') no-repeat center center;
        margin-bottom: 60px;
        background-size: cover; 
        min-height: 100vh;
    }

    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
    }

    .btn-primary, .btn-secondary {
        background-color: #548D9B;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover, .btn-secondary:hover {
        background-color: #CEDFCC;
        color: #548D9B;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .form-group {
        background-color: rgba(255, 255, 255, 0.8); 
        border-radius: 8px; 
        padding: 20px; 
        margin-bottom: 20px; 
    }

    .text-danger {
        font-weight: bold; 
    }
</style>

<h3>Are you sure you want to delete this specialization?</h3>
<div class="row">
    <div class="col-md-4">
        <hr />
        <dl class="row">
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SpecializationName)
            </dd>
        </dl>

        <form asp-action="Delete" class="form-group">
            <input type="hidden" asp-for="SpecializationId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
