@model MedService.Models.Patient

@{
    ViewData["Title"] = "Patient Account";
}

<h2>Patient Account</h2>

<form asp-action="UpdatePatient" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="PatientName" class="control-label"></label>
        <input asp-for="PatientName" class="form-control" />
        <span asp-validation-for="PatientName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientEmail" class="control-label"></label>
        <input asp-for="PatientEmail" class="form-control" readonly />
        <span asp-validation-for="PatientEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientPassword" class="control-label"></label>
        <input asp-for="PatientPassword" type="password" class="form-control" />
        <span asp-validation-for="PatientPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientSex" class="control-label"></label>
        <select asp-for="PatientSex" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="PatientSex" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MedicalCardFilePath" class="control-label"></label>
        <input asp-for="MedicalCardFilePath" type="file" class="form-control" />
        <span asp-validation-for="MedicalCardFilePath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
